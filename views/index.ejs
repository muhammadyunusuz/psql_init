<%- include('parts/header') %> 

<% var users = users || [] %>

<section class="pt-4 mt-4">
    <div class="container">
        <h1 class="display-2 text-center">Users</h1>
        <form action="/" method="POST" class="my-4 py-4 row">
            <label class="col-4">
                <input type="text" name="name" required class="form-control" placeholder="Name">
            </label>
            <label class="col-4">
                <input type="number" name="age" required class="form-control" placeholder="Age">
            </label>
            <label class="col-4">
                <select name="referal" class="form-select">
                    <% for(let referal of referals){%>
                    <option value="<%= referal.referal_id%>"><%= referal.referal_name%></option>
                    <% } %>
                </select>
            </label>
            <button class="btn btn-success col-12 mt-4">Add user</button>
        </form>
        <table class="mt-4 table table-striped table-bordered table-hover w-100 fs-1">
            <thead>
                <tr>
                    <th>#id</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Target</th>
                </tr>
            </thead>
            <tbody>
                <% for(let user of users){%>
                    <tr>
                        <td><%= user?.user_id %></td>
                        <td><%= user?.user_name %></td>
                        <td><%= user?.user_age %></td>
                        <td><%= user?.referal_name %></td>
                    </tr>
                <% } %>
                
            </tbody>
        </table>
    </div>
</section>

<%- include('parts/footer') %> 
